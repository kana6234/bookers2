<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name, id:"user_name" %>
  <label for="user_profile_image">Image</label>
  <%= f.file_field :profile_image, accept: "image/*", id:"user_profile_image" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, id:"user_introduction" %>
  <%= f.submit "Update User" %>
<% end %>